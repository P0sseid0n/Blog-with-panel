<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <style>
        body,html{
            height: 100%;
        }
    </style>

    <script src="https://cdn.tiny.cloud/1/sr4miwltu3t6qxs1dssj6h74w2rkmckvv637sz5cu7ghiss7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector:'#body',
            plugins: 'lists emoticons insertdatetime link code',
            toolbar: 'undo redo | styleselect | bold italic | ' +
            'alignleft aligncenter alignright alignjustify | ' +
            'outdent indent | numlist bullist | insertdatetime | emoticons | link code'
        });
    </script>
</head>
<body>
    <%- include('../../partials/navbar-admin.ejs')  %> 

    <div class="container mt-5">
        <form class="card" action="/admin/articles/update" method="POST">
            <div class="card-header text-center">
                <h2>Create new article</h2>
            </div>
            <div class="card-body">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="title" name="title" placeholder=">Article title" required>
                    <label for="title">Article title:</label>
                </div>
                <select class="form-select mb-3" name="categoryId" required>
                    <option selected disabled>Select a category</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id  %>"><%= category.name  %></option>  
                    <% }) %>
                </select>
                <textarea placeholder="Write here" name="body" id="body"></textarea>
                <div class="mt-3">
                    <a href="/admin/articles" class="btn btn-success mb-2 float-start">Back</a>
                    <button type="submit" class="btn btn-success mb-2 float-end">Create</button>
                </div>

            </div>
        </form>
    </div>
</body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

</html>